<?xml version="1.0" ?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.main">
            <block class="Codilar\ProductOrderSuit\Block\ProductOrderCount"
                   name="product.count"
                   template="Codilar_ProductOrderSuit::product/product_count.phtml"
                   after="product.info.price"/>
        </referenceBlock>
        <referenceBlock name="product.info.main">
            <block
                class="Codilar\ProductOrderSuit\Block\ProductOrderCount"
                name="product.info.salable"
                template="Codilar_ProductOrderSuit::product/avaliable_quantity.phtml"
                before="product.info.addtocart"/>
        </referenceBlock>
    </body>

</page>
